@model List<Order>

<h3>Add a new order</h3>
@ViewBag.error
<form asp-action="CreateOrder" asp-controller="Order" method="POST">
    Customer: <select name="customerid">
        @foreach(var c in @ViewBag.customers){
        <option value="@c.customerid">@c.name</option>
        }
    </select><br><br>
    Product: <select name="productid">
        @foreach(var p in @ViewBag.products){
        <option value="@p.productid">@p.name</option>
        }
    </select><br><br>
        Quantity: <select name="quantity">
        @for (var i=1; i<11; i++){
            <option value="@i">@i</option>
        }
    </select><br><br>
    <button type="submit">Order</button>
</form>

<table class="table table-striped table-hover table-bordered">
    <tr>
        <th>Customer Name</th>
        <th>Product</th>
        <th>Quantity</th>
        <th>Date</th>
    </tr>
    @foreach (var order in @Model){
        <tr>
            <td>@order.customer.name</td>
            <td>@order.product.name</td>
            <td>@order.quantity</td>
            <td>@order.created_at.ToString("D")</td>
        </tr>
    }
</table>
